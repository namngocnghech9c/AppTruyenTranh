<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemTruyenActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


    <ImageView
        android:id="@+id/img_chonAnhBia"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"/>
    <EditText
        android:id="@+id/ed_tenTruyen_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_textfield"
        tools:ignore="SpeakableTextPresentCheck"
        android:layout_marginBottom="10dp"
        android:hint="Tên truyện"
        android:fontFamily="@font/fontchudao"
        android:textSize="16sp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>
    <EditText
        android:id="@+id/ed_tenTacgia_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_textfield"
        tools:ignore="SpeakableTextPresentCheck"
        android:layout_marginBottom="10dp"
        android:hint="Tên tác giả"
        android:fontFamily="@font/fontchudao"
        android:textSize="16sp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>
    <EditText
        android:id="@+id/ed_namXB_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_textfield"
        tools:ignore="SpeakableTextPresentCheck"
        android:layout_marginBottom="10dp"
        android:hint="Năm xuất bản"
        android:fontFamily="@font/fontchudao"
        android:textSize="16sp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>
    <EditText
        android:id="@+id/ed_mota_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_textfield"
        tools:ignore="SpeakableTextPresentCheck"
        android:layout_marginBottom="10dp"
        android:hint="Mô tả"
        android:inputType="textImeMultiLine"
        android:fontFamily="@font/fontchudao"
        android:minHeight="100dp"
        android:textSize="16sp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>
    <ImageView
        android:id="@+id/img_noidungTruyen_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/custom_textfield"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <Button
        android:id="@+id/btn_themTruyen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:text="ADD"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/fontchudao"
        />
    </LinearLayout>
</ScrollView>