<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/not_use_2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/logo" />
        <TextView
            android:id="@+id/not_use_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fontchudao"
            android:textColor="@color/text_color"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/not_use_2"
            android:text="Username"/>
        <EditText
            android:id="@+id/ed_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/custom_textfield"
            tools:ignore="SpeakableTextPresentCheck"
            android:layout_marginBottom="10dp"
            android:hint="username"
            android:fontFamily="@font/fontchudao"
            android:textSize="16sp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_below="@+id/not_use_txt2"/>
        <TextView
            android:id="@+id/not_use_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fontchudao"
            android:textColor="@color/text_color"
            android:layout_marginLeft="20dp"
            android:text="Password"
            android:layout_below="@+id/ed_username"/>
        <EditText
            android:id="@+id/ed_passwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/not_use_txt3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="textPassword"
            android:fontFamily="@font/fontchudao"
            android:textSize="16sp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:hint="password"
            android:background="@drawable/custom_textfield"
            tools:ignore="SpeakableTextPresentCheck"
            />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu tài khoản"
            android:layout_below="@+id/ed_passwd"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/fontchudao"
            android:textColor="@color/bg_button"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:text="Đăng nhập"
            android:layout_below="@+id/checkBox"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/fontchudao"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_login"
            android:fontFamily="@font/fontchudao"
            android:text="Bạn chưa có tài khoản ?"
            android:layout_toLeftOf="@+id/tv_register"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_login"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/fontchudao"
            android:text="Đăng ký"
            android:textColor="@color/bg_button"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
</ScrollView>