<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:backgroundTint="@color/white"
    app:cardElevation="0dp"
    app:cardCornerRadius="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_cmt"
        android:paddingBottom="20dp"
        >


    <RelativeLayout
        android:id="@+id/not_use_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_txt_cmt">
        <TextView
            android:id="@+id/tv_fullname_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fontchudao"
            android:textStyle="normal"
            android:textSize="16dp"
            android:textColor="@color/text_color"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Tên người dùng"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/tv_noidungcmt_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#A12E2D2D"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="nội dung bình luận"
            android:layout_below="@+id/tv_fullname_item"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"/>
    </RelativeLayout>
        <TextView
            android:id="@+id/tv_time_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fontchudao"
            android:textStyle="normal"
            android:textSize="12dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/bg_txtfield"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/not_use_1"
            android:text="12:00" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>